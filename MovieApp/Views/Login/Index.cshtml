@{
    Layout = null;
}

<html ng-app="app" ng-controller="ctrl">
    <head>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-grid.css"/>
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/MovieApp.styles.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/MyStyle.css"/>

        <script src="~/js/Library/angular.min.js"></script>
        <script src="~/js/Library/angular-filter.js"></script>
        <script src="~/js/Login.js"></script>
    </head>

    <body>
        <div class="row">
            <div class="row">
                <label>Username</label>
                <input ng-model="username" class="input-row"/>
                <label>Password</label>
                <input ng-model="password" class="input-row"/>
                <button class="btn btn-primary" ng-click="Login()">Login</button>
            </div>
        </div>


    </body>
</html>
